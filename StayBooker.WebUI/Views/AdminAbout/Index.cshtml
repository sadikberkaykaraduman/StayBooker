@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@foreach (var item in Model)
{
    <label>Title 1</label>
    <input type="text" value="@item.AboutTitle1" class="form-control" />
    <br />
    <label>Title 2</label>
    <input type="text" value="@item.AboutTitle2" class="form-control" />
    <br />
    <label>Room</label>
    <input type="text" value="@item.AboutRoomCount" class="form-control" />
    <br />
    <label>Staff</label>
    <input type="text" value="@item.AboutStaffCount" class="form-control" />
    <br />
    <label>Customer</label>
    <input type="text" value="@item.AboutCustomerCount" class="form-control" />
    <br />
    <label>Content</label>
    <textarea type="text" class="form-control">@item.AboutContent</textarea>
    <br />
    <a href="/AdminAbout/Delete/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a>
    <a href="/AdminAbout/Update/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-success">Update</a>
}
<br />
<br />
<a href="/AdminAbout/Create/" class="btn mb-1 btn-rounded btn-outline-info">New About</a>

