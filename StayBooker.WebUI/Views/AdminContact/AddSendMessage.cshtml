@model CreateSendMessageDto

@{
    ViewData["Title"] = "SendMessageAsync";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="email-left-box">

    @await Html.PartialAsync("SidebarContactPartial")

    @await Html.PartialAsync("SidebarContactCategoryPartial")

</div>
<div class="email-right-box">

    @await Html.PartialAsync("ToolBoxSendMessagePartial")

    <div class="compose-content mt-5">

        <form method="post">
            <div class="form-group">
                <input type="text" asp-for="ReceiverName" class="form-control bg-transparent" placeholder="Receiver Name">
            </div>
            <div class="form-group">
                <input type="text" asp-for="ReceiverMail" class="form-control bg-transparent" placeholder="Receiver Mail">
            </div>
            <div class="form-group">
                <input type="text" asp-for="Title" class="form-control bg-transparent" placeholder="Subject">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" asp-for="Content" rows="15" placeholder="Enter text ..."></textarea>
            </div>
            <br />
            <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Send </button>
        </form>
    </div>
</div>