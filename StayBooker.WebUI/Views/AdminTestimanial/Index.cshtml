@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TestimonialId</th>
            <td>@item.TestimonialName</td>
            <td>@item.TestimonialTitle</td>
            <td><a href="/AdminTestimanial/Delete/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a></td>
            <td><a href="/AdminTestimanial/Update/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-success">Update</a></td>
            <td><a href="/AdminTestimanial/Details/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>
        </tr>
    }
</table>
<a href="/AdminTestimanial/Create/" class="btn mb-1 btn-rounded btn-outline-info">New Staff</a>

